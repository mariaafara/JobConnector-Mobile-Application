<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/custom_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Language"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/custom_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/custom_language"
        android:layout_alignStart="@+id/custom_language"
        android:layout_below="@+id/custom_language"
        android:layout_marginTop="13dp"
        android:text="level" />

    <TextView
        android:id="@+id/Link_Remove_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/custom_language"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="Remove"
        android:textColor="#fc0004ff" />
</RelativeLayout>