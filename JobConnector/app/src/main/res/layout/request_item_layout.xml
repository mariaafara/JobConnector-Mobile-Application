<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey_100"
        >

        <ImageView
            android:id="@+id/request_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="2"
            android:padding="5dp"
            android:src="@drawable/default_avata" />

        <TextView
            android:id="@+id/request_item_name"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/request_item_date"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/request_item_image"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Company Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/request_item_date"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp"

            android:layout_weight="1"
            android:paddingTop="20dp"
            android:text="77-77-2018"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/request_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/request_item_date"
            android:layout_below="@+id/request_item_date"
            android:layout_marginTop="13dp"
            android:text="Pending"
            android:textColor="#00FF00"
            android:textSize="20dp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        ></View>

</LinearLayout>