<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    tools:context="com.example.abo8a.jobconnector.CompanyJobSkillsFragment">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are any Other "
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="skills "
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="required?"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" optional"
            android:textColor="@color/aluminum"
            android:textSize="12dp" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_chooseSkill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonstyle"
        android:text="Choose Skill"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/company_jobskills_listview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/link_addSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/ic_add_icon"
        android:paddingTop="5dp"
        android:text=" Add skill"
        android:textColor="@color/primary"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible" />

    />

</LinearLayout>
